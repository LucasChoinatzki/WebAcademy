@model Aluno
@{
    ViewData["Title"] = "Cadastrar";
}
<form asp-action="Alterarb" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Alterar Perfil</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
 
        <div class="form-group" id="Sobre">
            <label asp-for="Sobre">Escreva um pouco sobre você</label>
            <input type="text" class="form-control"
                   asp-for="Sobre" />
            <span asp-validation-for="Sobre"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Imagem">
            <label>Imagem:</label><br />
            <input type="file" name="fupImagem" />
        </div>

        <input type="submit"
               class="btn btn-success"
               value="Salvar" />
    </fieldset>
</form>